<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://empresasEdit.caption"
        focusComponent="form"
        messagesPack="com.company.traslados.web.screens.empresas">
    <data>
        <instance id="empresasDc"
                  class="com.company.traslados.entity.Empresas">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="empresasDc">
            <column width="350px">
                <textField id="razonsocialField" property="name"/>
                <textField id="domicilioField" property="domicilio"/>
                <textField id="cuitField" property="cuit"/>
                <textField id="telefonoField" property="telefono"/>
                <textField id="emailField" property="email"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
